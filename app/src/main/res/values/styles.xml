<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/opensans</item>
        <item name="android:textColor">#222</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay">
        <item name="android:textColorPrimary">@color/actionbar_text</item>
    </style>
    <style name="AppTheme.PopupOverlay">
        <item name="android:textColorPrimary">@color/actionbar_text</item>
    </style>
    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/colorPrimary</item> <!-- Whatever color you want-->
    </style>
</resources>
